            <div type="transcription">
                
                <pb n="1"/>
                
                <note type="shelfmark" place="top-right" resp="#archive">
                    <del rend="strikethrough" xml:id="del_sig">Mus.ep. A. Schönberg 23 (Busoni-Nachl. B II)</del>
