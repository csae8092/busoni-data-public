                <note type="objdesc" resp="#E0300314">[Seite 3 des Bogens]</note>
                
                <note type="foliation" place="bottom-right" resp="#archive">[2]</note>
                
                <pb n="4"/>
                
                <note type="objdesc" resp="#E0300314">[Seite 4 des Bogens, vacat]</note>
                
            </div>
