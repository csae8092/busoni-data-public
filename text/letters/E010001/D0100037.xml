                        <lb/>Staatsbibliothek
                        <lb/><placeName key="E0500029"><hi rend="spacedout">Berlin</hi></placeName>
                    </stamp>
                </note>
                
                <note type="stamp" place="bottom-right" resp="#sbb_st_blue">
                    <stamp>Nachlaß Busoni</stamp>
                </note>
                
