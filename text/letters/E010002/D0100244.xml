    <text type="letter">
        <body>
            <div type="transcription">
                
                <pb n="1"/>
                
                <note type="shelfmark" place="…" rend="…" resp="#archive">
                    <del rend="strikethrough">Mus.ep. H. Huber 76 (Busoni-Nachl. <handShift new="#archive_red"/>B II<handShift new="#archive"/>)</del>
                </note>

                <note type="shelfmark" place="…" resp="#archive">Mus.Nachl. F. Busoni B II, 2302</note>
                
                <stamp rend="majuscule">Telegraph
                    <lb/>13.II.1918
                    <lb/><placeName key="E0500097">Basel</placeName></stamp>
                
                8
                <lb/>Lug 9 Müller
                <lb/>32/3
                
                bale <placeName key="E0500183">locarno</placeName> 433 30 13/2 8/40- n :
                
                <dateline>:
                    <address>
                        <addrLine rend="minuscule"><persName key="E0300017">Ferruccio Busoni</persName> <placeName key="E0500365">Veltlinerhalle</placeName></addrLine>
                        <addrLine rend="minuscule">Schl<choice><orig>ue</orig><reg>ü</reg></choice>sselzunft Freu Strasse Bale</addrLine>
                    </address>
                </dateline>
                
                <salute rend="minuscule">= Dem gesunden K<choice><orig>ue</orig><reg>ü</reg></choice>nstler mit dem gesunden Programme dem gesunden
                    <lb/>Menschen <persName key="E0300017">Busoni</persName> nebst allen <choice><orig>ue</orig><reg>ü</reg></choice>brigen Anwesenden meine herzlichsten
                    <lb/>Fr<choice><orig>ue</orig><reg>ü</reg></choice>hlingsgr<choice><orig>ue</orig><reg>ü</reg></choice>sse aus dem Tessin</salute>
                <signed rend="inline minuscule">= <persName key="E0300125">Hans Huber</persName> +</signed>
                
                <pb n="2"/>
                
            </div>
        </body>
    </text>
