                            </stamp>
                        </note>
                        
                        <addrLine rend="indent"><placeName key="E0500132">Zürich</placeName></addrLine>
                        <addrLine rend="indent"><placeName key="E0500189">Scheuchzerstr 36</placeName></addrLine>
                    </address>
