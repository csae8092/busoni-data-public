    <text type="postcard">
        <body>
            <div type="transcription">
                
                <pb n="1"/>
                
                <opener><salute><foreign xml:lang="it">M. c. a.</foreign>!</salute></opener>
                
                <p>
                    <notatedMusic place="inline">
                        <ptr target="nb/D0100232_nb1.xml"/>
                        <graphic width="118px" height="47px" url="D0100232_ex_1.png"/>
                        <desc><persName key="E0300017">Ferruccio Busoni</persName>, <title key="E0400120">Indianische Fantasie op.&#8239;44</title> (Zf. 8)</desc>
                    </notatedMusic>
                    
                    etc.
                    
                    <lb/>Soeben erhalten: ein geistvolles, schönes
                    <lb/>Stück. Ich freue mich! – <subst><del rend="overwritten">auf</del><add place="across"><choice><orig>f</orig><reg>F</reg></choice>ür</add></subst> Ihren lieben
                    <lb/>Brief: <foreign xml:lang="la">gratias agimus</foreign>! Die <choice><orig>Ue</orig><reg>Ü</reg></choice>bereinstimmung
                    <lb/>ist wirklich merkwürdig. Bald einmal
                    <lb/>mehr! Man verlangt von <placeName key="E0500097">Basel</placeName> einen
                    <lb/>Artikel über <persName key="E0300017">Busoni</persName>, den ich jetzt irgend
                    <lb/>auf einem <foreign xml:lang="it">passaggio</foreign> dem hlg. Geiste ablauschen
                    <lb/>mu<choice><orig>ß</orig><reg>ss</reg></choice>!</p>
                
                <closer>
                    <salute rend="align(center)">Tausend <foreign xml:lang="it">Saluti</foreign></salute>
                    <signed rend="align(right)"><persName key="E0300125">Huber</persName>!</signed>
                </closer>
                
                <pb n="2"/>
                
                <note type="shelfmark" place="top" resp="#archive">
                    <del rend="strikethrough">Mus.ep. H. Huber 34 (Busoni-Nachl. B II)</del>
                </note>
                
                <note type="shelfmark" place="margin-left" rend="rotate(-90)" resp="#archive">
                    <add place="margin-left">Mus.Nachl. F. Busoni B II, 2261</add>
                </note>
                
                <fw place="center" rend="large" xml:lang="fr">
                    <foreign xml:lang="fr"><placeName key="E0500215">Grand Hôtel <placeName key="E0500183">Locarno</placeName></placeName></foreign>
                </fw>
                
                <fw place="center" rend="small" xml:lang="fr">
                    <placeName key="E0500216">Lac Majeur</placeName> – <placeName key="E0500183" rend="majuscule larger">Locarno</placeName> – <placeName key="E0500092">Suisse</placeName>
                </fw>
                
                <fw place="left" rend="tiny caps">
                    <foreign xml:lang="it">Cartolina Postale</foreign>
                </fw>
                
                <fw place="right-of center">(<orgName><hi rend="majuscule">Balli</hi> &amp; C.<seg rend="sup">ie</seg></orgName>)</fw>
                
                <note type="stamp" place="right-of right" resp="#post">
                    <stamp rend="round border align(center) majuscule" xml:id="post_abs">
                        Ambulant
                        <lb/><date when-iso="1916-04-15">15.IV.16</date>.2517
                    </stamp>
                </note>
                
                <note type="address" place="center" resp="#major_hand">
                    <address rend="align(left)">
                        <addrLine>Herrn <persName key="E0300017">Ferruccio Busoni</persName></addrLine>
                        <addrLine rend="indent"><placeName key="E0500132">Zürich</placeName>.</addrLine>
                        <addrLine rend="indent"><placeName key="E0500189">Scheuchzerstr.</placeName></addrLine>
                    </address>
                </note>
                
                <note type="stamp" place="left" resp="#dsb_st_red">
                    <stamp rend="round border align(center) small">Deutsche
                        <lb/>Staatsbibliothek
                        <lb/><placeName key="E0500029"><hi rend="spaced-out">Berlin</hi></placeName>
                    </stamp>
                </note>
                
            </div>
        </body>
