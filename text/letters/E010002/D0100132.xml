                    <add place="below">Mus.Nachl. F. Busoni B II, 2268</add>
                </note>
                
                <note type="foliation" place="top-right" resp="#archive">[1]</note>
                
                <note type="objdesc" resp="#E0300326">[Rückseite von Textseite 1]</note>
                
            </div>
