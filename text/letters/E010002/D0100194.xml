                <pb n="5"/>
                
                <note type="objdesc" resp="#E0300314">[Rückseite von Textseite 2, vacat]</note>
                
                <pb n="6"/>
                
                <note type="objdesc" resp="#E0300314">[Rückseite von Textseite 3]</note>
                
