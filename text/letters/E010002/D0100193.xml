                <pb n="6"/>
                
                <note type="objdesc" resp="#E0300314">[Rückseite von Textseite 2, vacat]</note>
                
                <pb n="7"/>
                
                <note type="objdesc" resp="#E0300314">[Rückseite von Textseite 3, vacat]</note>
                
                <pb n="8"/>
                
